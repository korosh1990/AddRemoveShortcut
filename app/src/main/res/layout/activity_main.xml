<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d96b6"
    android:orientation="vertical"
    tools:context="ir.androidlife.addremoveshortcut.MainActivity">

    <Button
        android:id="@+id/addShortcut"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="افزودن میانبر"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#fceb05"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/removeShortcut"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/removeShortcut"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="حذف میانبر"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="#f53241"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="اندروید لایف"
        android:layout_below="@id/removeShortcut"
        android:gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:textColor="#d1d725"
        android:textStyle="bold"
        android:textSize="30dp"/>


</RelativeLayout>
